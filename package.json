{
    "name": "node-rest-boilerplate",
    "version": "1.0.0",
    "description": "Template for creating a REST server in Node.js",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon .",
        "start": "node .",
        "start:pm2": "pm2 start index.js --name=api",
        "restart": "pm2 delete -s api || ':' && npm run start"
